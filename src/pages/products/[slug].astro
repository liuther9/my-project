    return [
        { params: { slug: "ipcam-ipc04m" }, props: { product: ipc04m } },
        { params: { slug: "ipcam-ipc08m" }, props: { product: ipc08 } },
        { params: { slug: "ptz-t400" }, props: { product: t400 } },
    ];
