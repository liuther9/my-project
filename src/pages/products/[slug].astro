                "Баланс белого": "ATW/MWB",
                AGC: "Поддерживается",
            },
        },
    };

    const t400 = {
        title: "Поворотная камера PTZ IPCAM T400",
        image: "/my-project/src/assets/t400.jpeg",
        specs: {
            "Основные параметры": {
                Разрешение: "4.0МР 2688×1520",
                Битрейт: "32Кб/с~16Мб/с",
                Кодек: "H.265+/H.265/H.264+/H.264/MJPEG",
