---
const { title, icon, features } = Astro.props;
---

<article
    class="group bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 h-full flex flex-col border border-gray-100 overflow-hidden"
>
    <div class="p-8 flex-1">
        <div
            class="w-16 h-16 rounded-2xl bg-blue-100 flex items-center justify-center text-3xl mb-6"
        >
            {icon}
        </div>

        <h2 class="text-2xl font-bold text-gray-900 mb-4">{title}</h2>

        <ul class="space-y-3">
            {
                features.map((feature: any) => (
                    <li class="flex items-start">
                        <svg
                            class="w-5 h-5 text-green-500 flex-shrink-0 mr-2 mt-1"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                        >
                            <path
                                fill-rule="evenodd"
                                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                clip-rule="evenodd"
                            />
                        </svg>
                        <span class="text-gray-600">{feature}</span>
                    </li>
                ))
            }
        </ul>
    </div>

    <div class="border-t border-gray-100 p-4 bg-gray-50">
        <a
            href="/contact"
            class="text-blue-600 font-medium hover:text-blue-700 flex items-center justify-center"
        >
            Подробнее
            <svg
                class="w-4 h-4 ml-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
        </a>
    </div>
</article>
